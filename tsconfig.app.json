{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@a/*": ["./src/api/*"],
      "@c/*": ["./src/components/*"],
      "@h/*": ["./src/hooks/*"],
      "@r/*": ["./src/router/*"],
      "@s/*": ["./src/stores/*"],
      "@u/*": ["./src/utils/*"],
      "@v/*": ["./src/views/*"],
    }
  }
}
